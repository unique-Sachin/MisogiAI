RAGAS_FAITHFULNESS_THRESHOLD=0.90
RAGAS_CONTEXT_PRECISION_THRESHOLD=0.85

# Security
TOKENIZERS_PARALLELISM=false

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO

# Testing
TESTING=false 