# MCP Discord Server Environment Variables

# Application Settings
APP_NAME="MCP Discord Server"
ENVIRONMENT="development"

# Database Configuration
# For production, use PostgreSQL: postgresql+asyncpg://user:password@host:port/database
# For development/testing, SQLite works fine
DATABASE_URL="sqlite+aiosqlite:///./mcp_discord.db"

# Discord Bot Configuration
# Get this from https://discord.com/developers/applications
# 1. Create a new application
# 2. Go to Bot section and create a bot
# 3. Copy the bot token here
DISCORD_BOT_TOKEN="your_discord_bot_token_here"

# API Configuration
API_KEY_HEADER="X-API-Key"

# Rate Limiting Configuration
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_ENDPOINT=10

# Optional: Logging Configuration
LOG_LEVEL="INFO" 